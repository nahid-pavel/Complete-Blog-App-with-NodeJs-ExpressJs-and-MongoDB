<%- include('../partials/header.ejs')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

<div class="container-fluid" id="my-container">
    <div class="row">
        <div class="col-md-2">
                <%- include('../partials/sidebar.ejs')%>
        </div>
        <div class="col-md-10 my-5">

            <div class="card card-body text-center ">
               <h5>List Of Bookmarks</h5>
               <div class="row">
                   <% if (posts.length === 0) { %>
                         <div class="text-center text-muted">
                             <p>You didn't bookmark any post</p>
                        </div>
                          
                   <% } else { %>
                        <% for (let post of posts.reverse()) { %>
                        <div class="card col-sm-3 m-3">
                               <% if(post.thumbnail){ %>
                                    <img src ="<%=post.thumbnail %>" alt="<%= post.title %>" class="card-img-top  mt-3">
                                <% } %>
                                <div class="card-body">
                                    <a href="/explorer/<%=post._id%>">
                                        <h5><%= post.title %></h5>
                                    </a>
                                </div>

                        </div>
                            

                        <% } %>

                    <% } %>

               </div>
                
            </div>

        </div>
            

    </div>

    
</div>





</body>
</html>