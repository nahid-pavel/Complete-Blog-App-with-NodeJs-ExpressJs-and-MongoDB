<%- include('../partials/header.ejs')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

<div class="container-fluid" id="my-container">
    <div class="row">
        <div class="col-md-2">
                <%- include('../partials/sidebar.ejs')%>
        </div>
        <div class="col-md-10">
            <div class="row">
              <div class="col-md-8 offset-md-2">
               <div class="card card-body text-center ">
                    <h5><%= title %></h5>
                    <div class="mt-5" id="comment-holder">

                                    <% if(comments.length === 0) {  %>
                                       <p class="text-center">There is no comment</p>
                                    <% }else{ %>
                                        <% for(let comment of comments.reverse()) { %>
                                            <div class="media border">
                                                <img src="<%=comment.user.profilePics %>" class="rounded-circle mx-3 my-3" style="width:40px;">
                                                <div class="media-body my-3">
                                                    <p class="text-muted">
                                                       On Post <strong><%= comment.post.title %></strong>
                                                       By <a href="/author/<%= comment.user._id %>"><%= comment.user.username %></a>,
                                                       <%= moment(comment.createdAt) %>
                                                    </p>
                                                    <p><%= comment.body %></p>
                                                    <div name="replies">
                                                        <% if(comment.replies.length > 0) {%>
                                                            <% for(let reply of comment.replies) {%>
                                                               <div class="media mt-3">
                                                                    <img src="<%=reply.user.profilePics %>" class="rounded-circle align-self-start mr-3" style="width:40px;">
                                                                    <div class="media-body">
                                                                        <p><%= reply.body %></p>

                                                                    </div>
                                                               </div>

                                                            <% } %>

                                                        <% } %>
                                                    </div>
                                                    <div class="my-3">
                                                        <input type="text" class="form-control" placeholder="Please enter to reply" name="reply" data-comment="<%=comment._id %>" >
                                                    </div>
                                                </div>
                                            </div>
                                            


                                         <% } %>


                                       
                                    <% } %>
                                   
 
                               </div>
                               </div>

                
               </div>
              </div>
            
            </div>
        </div>
            

    </div>
   

    
</div>



<script src="/scripts/comments.js"></script>

</body>
</html>