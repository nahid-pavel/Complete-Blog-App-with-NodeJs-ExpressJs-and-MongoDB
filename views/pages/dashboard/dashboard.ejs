<%- include('../partials/header.ejs')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

<div class="container-fluid" id="my-container">
    <div class="row">
        <div class="col-md-2">
                <%- include('../partials/sidebar.ejs')%>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2 my-5">
                    <h5>My Recent Posts</h5>
                    <div class="row">
                        <% if (posts.length===0){  %>
                            <div class="text-center text-muted">
                                <p> There is no posts available right now</p>
                            </div>

                        <% }else { %>

                             <% for(let post of posts) { %>
                                 <div class="card col-sm-3 m-2">
                                     <% if(post.thumbnail){ %>
                                       <img src="<%=post.thumbnail%>" alt="<%=post.title %>" class="card-img-top mt-3">
                                          
                                     <% } %>
                                     <div class="card-body p-0">
                                         <a href="/explorer/<%=post._id%>" style="color: #222">
                                            <p class="my-2"><%= post.title %></p>
                                        </a>
                                     </div>

                                 </div>
                                 
                            
                              <% } %>

                        <% } %>
                    </div>
                </div>
                 <div class="row">
                        <div class="col-md-8 offset-md-2 my-5">
                        <h5>My Recent Boommarks</h5>
                        <div class="row">
                           <% if (bookmarks.length===0){  %>
                            <div class="text-center text-muted">
                                <p> There is no Bookmarks available right now</p>
                            </div>

                        <% }else { %>

                             <% for(let post of bookmarks) { %>
                                 <div class="card col-sm-3 m-2">
                                     <% if(post.thumbnail){ %>
                                       <img src="<%=post.thumbnail%>" alt="<%=post.title %>" class="card-img-top mt-3">
                                          
                                     <% } %>
                                     <div class="card-body p-0">
                                         <a href="/explorer/<%=post._id%>" style="color: #222">
                                            <p class="my-2"><%= post.title %></p>
                                        </a>
                                     </div>

                                 </div>
                                 
                            
                              <% } %>

                        <% } %>
                        </div>
                        
                    </div>
            </div>
         </div>         

    </div>

</div>




<%- include('../partials/footer.ejs')%>


</body>
</html>

